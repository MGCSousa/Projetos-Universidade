@model IEnumerable<CleanicaFinal.Formulario_de_Satisfacao>

<!DOCTYPE html>
<html>
<head>
<meta name="viewport" content="width=device-width, initial-scale=1">
<style>
body {
    font-family: "Lato", sans-serif;
}

.sidenav {
    height: 100%;
    width: 0;
    position: fixed;
    z-index: 1;
    top: 0;
    left: 0;
    background-color: #1a1717;
    overflow-x: hidden;
    transition: 0.5s;
    padding-top: 60px;
}

.sidenav a {
    padding: 8px 8px 8px 32px;
    text-decoration: none;
    font-size: 25px;
    color: #818181;
    display: block;
    transition: 0.3s;
}

.sidenav a:hover {
    color: #f1f1f1;
}

.sidenav .closebtn {
    position: absolute;
    top: 0;
    right: 25px;
    font-size: 36px;
    margin-left: 50px;
}

/* Input */
input[type=text] {
    width: 300px;
    padding: 15px;
    margin: 5px 0 22px 0;
    display: inline-block;
    border: none;
    background: #f1f1f1;
}

/* Botão de Submeter */
input[type=submit] {
    background-color: black;
    color: white;
    padding: 16px 20px;
    margin: 8px 0;
    border: none;
    cursor: pointer;
    width: 100%;
    opacity: 0.9;
}

/* Tabela de Formulários */
th {
    text-align: center;
    background-color: #1d211e;
    color: white;
}

tr:nth-child(even) {
    background-color: #818181;
}
</style>
</head>
<body>
    <div align="left" id="mySidenav" class="sidenav">
        <h1 style="color:red;" align="center">@ViewBag.username</h1>
        <h5 style="color:red;" align="center">@ViewBag.email</h5>
        <a href="@Url.Action("RegistarFuncForm", "Administrador", new { email = ViewBag.email, username = ViewBag.username }, Request.Url.Scheme)"><span>Registar Funcionário</span></a>
        <a href="@Url.Action("RemoverFuncForm", "Administrador", new { email = ViewBag.email, username = ViewBag.username }, Request.Url.Scheme)"><span>Remover Funcionário</span></a>
        <a href="@Url.Action("AltServicoForm", "Administrador", new { email = ViewBag.email, username = ViewBag.username }, Request.Url.Scheme)"><span>Alterar Serviço</span></a>
        <a href="@Url.Action("consFormSatisfacao", "Administrador", new { email = ViewBag.email, username = ViewBag.username }, Request.Url.Scheme)"><span>Formulários</span></a>
        <a href="" onclick="closeNav()">Fechar</a> <br /> <br />
        <a href="@Url.Action("Index", "Home", new { }, Request.Url.Scheme)"><span>Terminar Sessão</span></a>
    </div>
    <span style="font-size:30px;cursor:pointer" onclick="openNav()">&#9776;</span>
    <h1 align="center">Formulários de Satisfação</h1><br />
    <table border="1" align="center">
    <tr>
        <th width="250">Cliente</th>
        <th width="250">Funcionário</th>
        <th width="100">Pontuação</th>
        <th width="200">Sugestões</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td align="center">
                @Html.DisplayFor(modelItem => item.Cliente_Utilizador_email)
            </td>
            <td align="center">
                @Html.DisplayFor(modelItem => item.Funcionario_Utilizador_email)
            </td>
            <td align="center">
                @Html.DisplayFor(modelItem => item.pontuacao)
            </td>
            <td align="center">
                @Html.DisplayFor(modelItem => item.sugestoes)
            </td>
        </tr>
    }
    </table>
</body>
</html>

<script>
    function openNav() {
        document.getElementById("mySidenav").style.width = "300px";
    }

    function closeNav() {
        document.getElementById("mySidenav").style.width = "0";
    }
</script>
