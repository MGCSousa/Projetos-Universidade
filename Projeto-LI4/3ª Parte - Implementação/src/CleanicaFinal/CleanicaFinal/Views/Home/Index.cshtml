<!DOCTYPE html>
<html>
<head>
<meta name="viewport" content="width=device-width" />
<style>
body {
    font-family: 'Lucida Sans'
}

input, .btn {
    width: 100%;
    padding: 12px;
    border: solid;
    border-radius: 4px;
    margin: 5px 0;
    opacity: 0.85;
    display: inline-block;
    font-size: 17px;
    line-height: 20px;
    text-decoration: none;
}

input[type=submit] {
    background-color: #2821d9;
    color: white;
    cursor: pointer;
}

input[type=submit]:hover {
    background-color: #45a049;
}

.col {
    float: left;
    width: 50%;
    margin: auto;
    padding: 0 50px;
    margin-top: 6px;
}

.vl {
    position: absolute;
    left: 50%;
    transform: translate(-50%);
    border: 1px dotted #2821d9;
    height: 750px;
}
.button {
    background-color: black;
    border: none;
    color: white;
    padding: 15px 32px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
    margin: 4px 2px;
    cursor: auto;
}

.button1 {
    background-color: white;
    color: black;
    border: 2px solid #4CAF50;
}
</style>
</head>
<body>
    <div class="col" align="center" id="parent">
        <h3 align="center">Ainda não está registado? <br /> Registe-se aqui em menos de 1 minuto.</h3>
        @using (Html.BeginForm("RegistarCliente", "Home", FormMethod.Post))
        {
            @Html.ValidationSummary(true)
            <fieldset>
                Email <br /> <input type="text" name="email" required /> <br />
                Username <br /> <input type="text" name="username" required /> <br />
                Password <br /> <input type="password" name="password" required /> <br />
                Telemóvel <br /> <input type="number" name="telemovel" required pattern="[9][1236][0-9]{7}" /> <br />
                Morada <br /> <input type="text" name="morada" required /> <br />
            </fieldset>
            <input type="submit" value="Registar" />
        }
    </div>
    <div class="vl">
    </div>
    <div class="col" align="center">
        <p align="center">
            <button class="button button1">@ViewBag.info</button>
        </p>
        @using (Html.BeginForm("Login", "Home", FormMethod.Post))
        {
            @Html.ValidationSummary(true)
            <fieldset>
                Email <br /> <input type="text" name="email" required /> <br />
                Password <br /> <input type="password" name="password" required />
            </fieldset>
            <input type="submit" value="Login" />
        }
    </div>
</body>
</html>



